<?xml version="1.0"?>

<form col="6">
    <group id="salary_rule" col="6" colspan="4">
        <label name="name"/>
        <field name="name"/>
        <label name="category"/>
        <field name="category"/>
        <label name="code"/>
        <field name="code"/>
        <label name="priority"/>
        <field name="priority"/>
        <label name="active"/>
        <field name="active"/>
    </group>    
    <notebook colspan="6">
        <page id="_general" string="General">
            <group id="_conditions" string="Conditions">
                <label name="condition_select"/>
                <field name="condition_select"/>
                <label name="condition_range_max"/>
                <field name="condition_range_max"/>
                <label name="condition_range_min"/>
                <field name="condition_range_min"/>
            </group>
            <group id="_computation" string="Computations" colspan="4">
                <label name="amount_select"/>
                <field name="amount_select"/>
                <label name="percentage_based"/>
                <field name="percentage_based"/>
                <label name="amount_percentage"/>
                <field name="amount_percentage"/>
                <label name="amount_fix"/>
                <field name="amount_fix"/>
                <label name="note"/>
                <field name="note"/>
                <label name="priority"/>
                <field name="priority"/>
            </group>
        </page>
    </notebook>
</form>