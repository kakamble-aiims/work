            <field name="wiz_name">telephone.allowance.wiz</field>
            <field name="window" eval="True"/>
        </record>


        <!-- Menu -->
        <menuitem id="menu_bills_subitem" name="Newspaper Bill" parent="menu_bills" action="action_bills"/>
        <menuitem id="menu_newspaper_subitem_wiz" name="Newspaper Bill" parent="menu_bills" action="act_wizard_Newspaper_Allowance_wizard"/>
        <menuitem id="menu_telephone_subitem" name="Telephone Bill" parent="menu_bills" action="action_telephone"/>
