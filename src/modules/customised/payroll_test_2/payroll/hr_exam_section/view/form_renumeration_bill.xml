<?xml version="1.0"?>
<form>
    <label name="type_of_examiner"/>
    <field name="type_of_examiner"/>
    <group id="examiner" colspan="2">
        <label name="employee"/>
        <field name="employee"/>
        <label name="examiner_name"/>
        <field name="examiner_name"/>
    </group>
    
    <group id="details" colspan="4" col="6">
        <label name="designation"/>
        <field name="designation"/>
        <label name="exam"/>
        <field name="exam"/>
        <label name="course_name"/>
        <field name="course_name"/>
    </group>
    
    <label name="address"/>
    <field name="address" colspan="3"/>
    
    <label name="pincode"/>
    <field name="pincode"/>
    <field name="purpose" colspan="4"/>
    <label name="total_amount"/>
    <field name="total_amount" colspan="1"/>
    <label name="net_amount"/>
    <field name="net_amount" colspan="1"/>
    
    <label name="bank_name"/>
    <field name="bank_name"/>
    
    <label name="account_number"/>
    <field name="account_number"/>
    
    <label name="ifsc_code"/>
    <field name="ifsc_code"/>
    
    <group id="buttons" colspan="4">
        <button name="confirm_data" string="Confirm"
            confirm="Are you sure the provided information is correct? After clicking OK, you will NOT be allowed to make changes"/>
        <button name="approve" string="Approve"/>
        <button name="send_for_aao_approval" string="Send for AAO Approval"/>
        <button name="send_for_ao_approval" string="Approved by AAO"/>
        <button name="send_for_ace_approval" string="Approved by AO"/>
        <button name="send_for_adean_approval" string="Approved by ACE"/>
        <button name="send_for_dean_approval" string="Approved by Assistant Dean"/>
        <button name="send_for_ao_approval_2" string="Approved by Dean"/>
    </group>
</form>