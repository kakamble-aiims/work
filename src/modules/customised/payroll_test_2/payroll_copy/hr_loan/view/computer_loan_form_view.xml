<?xml version="1.0"?>
<form>
    <group id="loan">
        <group id="computer_loan" colspan="4" col="4">
            <label name="salary_code"/>
            <field name="salary_code"/>
            <label name="employee"/>
            <field name="employee"/>
            <label name="designation"/>
            <field name="designation"/>
            <label name="department"/>
            <field name="department"/>
            <label name="pay_in_band"/>
            <field name="pay_in_band"/>
            <label name="price"/>
            <field name="price"/>
            <label name="amount_required"/>
            <field name="amount_required"/>
            <label name="date_of_retirement"/>
            <field name="date_of_retirement"/>
            <label name="dob"/>
            <field name="dob"/>
            <label name="installment_no"/>
            <field name="installment_no"/>
            <label name="approve_date"/>
            <field name="approve_date"/>
            <label name="approve_by"/>
            <field name="approve_by"/>
        </group>
            <newline/>
        <group id="computer_loan_purpose" colspan="4" col="2">
            <label name="purpose" string="Whether advance for similar purpose was obtained previously and if so:"/>
            <field name="purpose"/>
        </group>
            <newline/>
            <label name="drawal_date"/>
            <field name="drawal_date"/>
            <label name="interest" string="The amount of advance and or interest there on still outstanding if any."/>
            <field name="interest"/>
            <label name="basic_pay"/>
            <field name="basic_pay"/>
            <label name="state"/>
            <field name="state"/>
            <label name="cancel_reason"/>
            <field name="cancel_reason"/>
            <label name="payout"/>
            <field name="payout"/>
            <label name="pending"/>
            <field name="pending"/>
            <label name="reschedule"/>
            <field name="reschedule"/>
            <field name="check"/>
        <group id="loan_line" colspan="4">
            <field name="loan_line"/>
        </group>
        <group id="loan_button_ids" colspan="4" col="6">
        <button name="calculate_instalment" string="Calculate" colspan="2"/>
        <button name="submitted_to_jo" string="Submit" colspan="2" confirm="Are you sure you want to submit?"/>
        <button name="forward_to_jo" string="Forward to AO" confirm="Do you want to forward this Account Officer?"/>
        <button name="forward_to_ao" string="Approve" confirm="Are you sure you want to approve?"/>
        <button name="cancel" string="Cancel" confirm="Are you sure you want to cancel?"/>
    </group>
    </group>
</form>
